{
  "name": "IncidentSeverityAdvisor",
  "description": "GoFAI-style knowledge base to classify production incidents into severity levels and recommended responses. Non-authoritative template for SRE/DevOps teams.",
  "attributes": [
    {
      "name": "BusinessImpact",
      "kind": "categorical",
      "domain": [ "none", "minor", "moderate", "major", "critical" ]
    },
    {
      "name": "SystemType",
      "kind": "categorical",
      "domain": [ "customer_facing", "internal_critical", "internal_noncritical", "batch" ]
    },
    {
      "name": "AffectedUsersPct",
      "kind": "numeric"
    },
    {
      "name": "RevenueImpact",
      "kind": "categorical",
      "domain": [ "none", "low", "medium", "high" ]
    },
    {
      "name": "DataLoss",
      "kind": "categorical",
      "domain": [ "none", "temporary", "permanent" ]
    },
    {
      "name": "SecuritySuspected",
      "kind": "categorical",
      "domain": [ "no", "possible", "confirmed" ]
    },
    {
      "name": "WorkaroundAvailable",
      "kind": "categorical",
      "domain": [ "yes", "partial", "no" ]
    },
    {
      "name": "SLAviolationRisk",
      "kind": "categorical",
      "domain": [ "low", "medium", "high" ]
    },
    {
      "name": "IncidentDurationMinutes",
      "kind": "numeric"
    },
    {
      "name": "TimeOfDay",
      "kind": "categorical",
      "domain": [ "business_hours", "off_hours", "weekend" ]
    }
  ],
  "examples": [
